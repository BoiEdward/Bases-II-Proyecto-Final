<!-- mainPage.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/mainPage">CRUD Nodejs Mysql</a>
      <a class="navbar-brand" href="/hospedaje">Hospedajes</a>
      <a class="navbar-brand" href="/vehiculos">Vehiculos</a>
      <a class="navbar-brand" href="/paquetes">Paquetes</a>
      <a class="navbar-brand" href="/reservas">Mis Reservas</a>

      <form action="/logout" method="post">
        <button type="submit" class="btn btn-primary">Cerrar sesión</button>
      </form>
    </div>
  </nav>

  <div style="display: flex;">
    <div style="height: 85vh; width: 100%; background-color:white; overflow: auto;">
      <ul style="margin: 10px;" class="list-group">
        <li class="list-group-item active">PAQUETES</li>
        <% paquetes.rows.forEach(function(paquete) { %>
          <div class="container border border-secondary">
            <div class="row">
              <div class="col-md-4">
                <div class="card">
                  <div class="card-body">
                    <h4>Detalles del Paquete</h4>
                    <strong>Nombre del Paquete:</strong> <%= paquete[4] %><br>
                    <strong>Tipo del Paquete:</strong> <%= paquete[1] %><br>
                    <strong>Duración:</strong> <%= paquete[5] %> Días<br>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card">
                  <div class="card-body">
                    <h4>Detalles del Coche</h4>
                    <strong>Modelo del Coche Incluido:</strong> <%= paquete[9] %><br>
                    <strong>Marca del Coche Incluido:</strong> <%= paquete[7] %><br>
                    <strong>Kilometraje del Coche Incluido:</strong> <%= paquete[8] %> Km<br>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card">
                  <div class="card-body">
                    <h4>Detalles del Hospedaje</h4>
                    <strong>Nombre del Hospedaje Incluido:</strong> <%= paquete[13] %><br>
                    <strong>Tipo del Hospedaje Incluido:</strong> <%= paquete[11] %><br>
                    <strong>Descripción del Hospedaje Incluido:</strong> <%= paquete[14] %><br>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <form action="/registrarPaquete" method="post">
                    <input type="hidden" id="idReserva" name="idReserva" value="<%= paquete[0] %>">
                    <button class="btn btn-primary" type="submit">Reservar Paquete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>  
      </ul>
    </div>
  </div>
</body>
</html>
