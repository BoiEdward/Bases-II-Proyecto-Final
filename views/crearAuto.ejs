<!-- mainPage.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/mainPage">CRUD Nodejs Mysql</a>
      <a class="navbar-brand" href="/crearHospedaje">Crear Hospedajes</a>
      <a class="navbar-brand" href="/crearAuto">Crear Vehiculos</a>
      <a class="navbar-brand" href="/crearPaquete">Crear Paquetes</a>

      <form action="/logout" method="post">
        <button type="submit" class="btn btn-primary">Cerrar sesión</button>
      </form>
    </div>
  </nav>

  <form action="/crearAuto" method="post" class="mt-4" style="margin: 50px;">
    <h1>CREAR AUTO</h1>
    <!-- Campo de nombre del hospedaje -->
    <div class="mb-3">
        <label for="modeloAuto" class="form-label">Modelo del Auto:</label>
        <input type="text" id="modeloAuto" name="modeloAuto" class="form-control" maxlength="10" required>
    </div>

    <div class="mb-3">
        <label for="kilometraje" class="form-label">Kilometraje:</label>
        <input type="number" step="any" id="kilometraje" name="kilometraje" class="form-control" required>
    </div>
      
      <div class="mb-3">
        <label for="unidades" class="form-label">Unidades Disponibles:</label>
        <input type="number" id="unidades" name="unidades" class="form-control" required>
    </div>
      
  
    <!-- Barra de selección -->
    <div class="mb-3">
      <label for="marcaAuto" class="form-label">Marca del Auto:</label>
      <select id="marcaAuto" name="marcaAuto" class="form-select" required>
        <!-- Iterar sobre los tipos de hospedaje y agregar opciones dinámicamente -->
        <% marcas.rows.forEach(function(marca) { %>
          <option value="<%= marca[0] %>"><%= marca[0] %></option>
        <% }); %>
      </select>
    </div>
  
    <!-- Botón de envío del formulario -->
    <button type="submit" class="btn btn-primary">Crear Auto</button>
  </form> 

  <form action="/crearMarca" method="post" class="mt-4" style="margin: 50px;">
    <h1>CREAR MARCA</h1>
    <!-- Campo de nombre del hospedaje -->
    <div class="mb-3">
        <label for="marca" class="form-label">Nombre Marca:</label>
        <input type="text" id="marca" name="marca" class="form-control" maxlength="20" required>
    </div>
  
    <!-- Botón de envío del formulario -->
    <button type="submit" class="btn btn-primary">Crear Marca</button>
  </form> 
</body>
</html>
