<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/mainPage">CRUD Nodejs Mysql</a>
      <a class="navbar-brand" href="/hospedaje">Hospedajes</a>
      <a class="navbar-brand" href="/vehiculos">Vehiculos</a>
      <a class="navbar-brand" href="/paquetes">Paquetes</a>
      <a class="navbar-brand" href="/reservas">Mis Reservas</a>

      <form action="/logout" method="post">
        <button type="submit" class="btn btn-primary">Cerrar sesi√≥n</button>
      </form>
    </div>
  </nav>

  <div style="display: flex;">
    <div style="height: 85vh; width: 100%; background-color:white; overflow: auto;">
      <ul style="margin: 10px;" class="list-group">
        <li class="list-group-item active">MIS RESERVAS DE HOSPEDAJES</li>
        <% reservasHotel.rows.forEach(function(reservaHotel) { %>
          <li class="list-group-item" style="margin-top: 10px;">
            <strong>Mi Nombre:</strong> <%= reservaHotel[0] %></br>
            <strong>Nombre del Hospedaje:</strong> <%= reservaHotel[12] %></br>
            <strong>Tipo del Hospedaje:</strong> <%= reservaHotel[10] %></br>
            <strong>Fecha de la Reserva:</strong> <%= reservaHotel[6] %></br>
          </li>
        <% }); %>  
      </ul>
    </div>
  </div>
  <div style="display: flex;">
    <div style="height: 85vh; width: 100%; background-color:white; overflow: auto;">
      <ul style="margin: 10px;" class="list-group">
        <li class="list-group-item active">MIS RESERVAS DE AUTOS</li>
        <% reservasAuto.rows.forEach(function(reservaAuto) { %>
          <li class="list-group-item" style="margin-top: 10px;">
            <strong>Mi Nombre:</strong> <%= reservaAuto[0] %></br>
            <strong>Marca del Auto:</strong> <%= reservaAuto[12] %></br>
            <strong>Modelo del Auto:</strong> <%= reservaAuto[14] %></br>
            <strong>Fecha de Salida:</strong> <%= reservaAuto[8] %></br>          
            <strong>Fecha de Entrada:</strong> <%= reservaAuto[9] %></br>
          </li>
        <% }); %>  
      </ul>
    </div>
  </div>

</body>
</html>
